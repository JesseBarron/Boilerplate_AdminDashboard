<% if (successMessages && successMessages.length) { %>
<script>
    window.addEventListener('load', function(){
        <% for(var i = 0; i < successMessages.length; i++) { %>
            new PNotify({
                title: "Success",
                text: '<%= successMessages[i] %>',
                type: "success",
                styling: 'bootstrap3'
            });
        <% } %>
    });
</script>
<% } %>
<% if (errorMessages && errorMessages.length) { %>
<script>
    window.addEventListener('load', function(){
        <% for(var i = 0; i < errorMessages.length; i++) { %>
            new PNotify({
                title: "Error",
                text: '<%= errorMessages[i] %>',
                type: "error",
                styling: 'bootstrap3'
            });
        <% } %>
    });
</script>
<% } %>
            
