<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/header %>
</head>
<body class="login" data-gr-c-s-loaded="true">
  
      <% include ./partials/flash %>

      <div class="login_wrapper">

        <div class="animate form login_form">
          <section class="login_content">
            <form action="/admin/login" method="POST">
              <h1>Login</h1>
              <div>
                <input name="email" type="text" class="form-control" placeholder="Email" required="">
              </div>
              <div>
                <input name="password" type="password" class="form-control" placeholder="Password" required="">
              </div>
              <div>
                <button type="submit" class="btn btn-default submit">Log in</button>
                <!-- <a class="reset_pass" href="#">Lost your password?</a> -->
              </div>

              <div class="clearfix"></div>

              <div class="separator">

                <div class="clearfix"></div>
                <br>

                <div>
                  <h1><i class="fa fa-<%= COMPANY_FA_ICON %>"></i> <%= COMPANY %></h1>
                </div>
              </div>
            </form>
          </section>
        </div>

      </div>

      <script src="/vendors/gentelella-master/vendors/jquery/dist/jquery.min.js"></script>
      <script src="/vendors/gentelella-master/vendors/pnotify/dist/pnotify.js"></script>
    </body>
</html>
